MDScreen:
	name: "reg"

	MDFloatLayout:
		md_bg_color: get_color_from_hex("#1E1F24")

		Image:
			source: "Items/purple_ecl.png"
			pos_hint: {"x": 0.35, "y": -0.25} 
		Image:
			source: "Items/pink_ecl.png"
			pos_hint: {"x": -0.4, "y": -0.43}
		Image:
			source: "Items/blue_ecl.png"
			pos_hint: {"x": 0.45, "y": -0.5}

		MDBoxLayout:
			padding: [25, 10, 15, 10]
			orientation: "vertical"
			background_normal: ""
			radius: 10
			md_bg_color: get_color_from_hex("#18181F")
			pos_hint: {"x": 0.22, "y": 0.06}
			size_hint: (0.56, 0.09)


			MDLabel:
				bold: True
				text: "Есть аккаунт в Songle?"
				font_size: "14sp"
				color: get_color_from_hex("#FFFFFF")
				pos_hint: {"x": 0, "y": 1}

			MDTextButton:
				id: textb_signin
				background_normal: ""
				background_color: get_color_from_hex("#18181F")
				text: "Войти"
				bold: True
				color: get_color_from_hex("#596AC6")
				font_size: "14sp"
				pos_hint: {"x": 0.35, "y": 0}		
				on_press: 
					root.manager.transition.direction = "right"
					root.manager.current = "login"	 

		Image:
			source: "Items/Songle.png"
			pos_hint: {"center_x": 0.5, "top": 0.93}
			size_hint: (0.55, 0.09)

		ItemTextInput:
			pos_hint: {"x": 0.055, "y": 0.716}
			size_hint: (0.88, 0.095)
			hint_text: "Email"

		ItemTextInput:
			pos_hint: {"x": 0.055, "y": 0.637}
			size_hint: (0.88, 0.095)
			hint_text: "Логин"

		ItemTextInput:
			pos_hint: {"x": 0.055, "y": 0.559}
			size_hint: (0.88, 0.095)
			hint_text: "Пароль"
			password: True

		MDIconButton:
			id: icon 
			icon: "square-outline"
			size_hint: (0.08, 0.04)
			pos_hint: {"x": 0.055, "y": 0.5}
			theme_icon_color: "Custom"
			icon_color: get_color_from_hex("#D9D9D9")
			# on_press: app.press_stay(self)			

		MDLabel:
			text: "Не выходить из системы"
			bold: True
			size_hint: (0.614, 0.314)
			pos_hint: {"x": 0.167, "y": 0.362}					
			font_size: "18sp"
			background_normal: ""
			background_color: get_color_from_hex("#1E1F24")
			color: get_color_from_hex("#FFFFFF")

		Button:
			text: "Зарегистрироваться"
			font_size: "24sp"
			bold: True
			background_normal: ""
			background_color: get_color_from_hex("#596AC6")
			color: get_color_from_hex("#E4E4E4")
			size_hint: (0.78, 0.07)
			pos_hint: {"x": 0.11, "y": 0.38}
			radius: 10
			on_press: root.manager.current="home"

		MDLabel:
			text: "или через"
			bold: True
			size_hint: (0.25, 0.03)
			pos_hint: {"x": 0.39, "y": 0.3}
			color: get_color_from_hex("#FFFFFF")

		MDIconButton:
			icon: "Items/vk.png"
			icon_size: 60
			size_hint: (0.19, 0.1)
			pos_hint: {"x": 0.54, "y": 0.17}

		MDIconButton:
			icon: "Items/tg.png"
			icon_size: 60
			size_hint: (0.19, 0.1)
			pos_hint: {"x": 0.28, "y": 0.17}